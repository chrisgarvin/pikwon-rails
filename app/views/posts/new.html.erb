</div>
<script>

var firstOption = document.getElementById('test_option_text_one')
var secondOption = document.getElementById('test_option_text_two')

firstOption.addEventListener("keyup",function(){
  document.getElementsByClassName("character_count")[0].innerText = 22 - firstOption.value.length
});
secondOption.addEventListener("keyup",function(){
  document.getElementsByClassName("character_count")[1].innerText = 22 - secondOption.value.length
});

</script>
