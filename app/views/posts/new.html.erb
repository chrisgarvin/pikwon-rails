<%= form_for :test, :html => { :class => "form" } do |f| %>


  <div class="options_new">
    <span class="character_count">
      22
    </span>
    <%= f.text_field :option_text_one, autocomplete: :off %>
  </div>
  <div>
    <%= f.submit "SUBMIT FOR PIKS" %>
